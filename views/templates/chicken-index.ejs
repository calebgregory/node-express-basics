<!doctype html>
<html>
  <head>
    <title><%= title %> | Chicken | List Orders</title>
  </head>
  <body>
    <h1>Orders</h1>
    <a href="/chickennuggets/order">New Order</a>
    <h3>Waiting</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Flavor</th>
          <th>Qty</th>
          <th>Time</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(order) { %>
        <%   if(!order.complete) { %>
        <%     debugger; %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.flavor %></td>
            <td><%= order.qty %></td>
            <td><%= order.createdAt %></td>
            <td>
              <form
                action="/chickennuggets/order/<%= order._id %>/complete"
                method="POST">
                <input type="submit" value="Complete">
              </form>
            </td>
          </tr>
          <% }}); %>
      </tbody>
    </table>
    <h3>Completed</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Flavor</th>
          <th>Qty</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(order) { %>
        <% if(order.complete) { %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.flavor %></td>
            <td><%= order.qty %></td>
            <td><%= order.createdAt %></td>
          </tr>
          <% }}); %>
      </tbody>
    </table>
  </body>
</html>
